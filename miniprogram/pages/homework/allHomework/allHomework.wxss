.hm-title-con{
  background-color: white;
}

.hm-title{
  color: black;
  font-size: 40rpx;
  margin: 20rpx 40rpx 0 40rpx;
}

.homeworkCard{
  background-color: white;
  border-radius: 20rpx;
  margin: 20rpx 20rpx;
  padding: 30rpx;
  display: flex;
}

.homework-lift{
  flex: 8
}

.homework-right{
  flex: 2;
  display: flex;
  align-items: center;

}

.homeworkTitle{
  color: #515151;
  font-size: 30rpx;
  font-weight: 7;

}

.homeworktext{
  color: #636363;
  font-size: 25rpx;
}

.home-icon{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

.icon-text{
  display:flex;
  align-items: center;
}

.home-action{
  color: #1296db;
  font-size: 30rpx;

}

.icons-action{
  height: 30rpx;
  width: 30rpx;
}

.login-con{
  background-color: #F1F1F1;
}

.nologin-con{
  align-items: center;
  justify-items: center;
  width: 100%;
  background-color: white;
}

