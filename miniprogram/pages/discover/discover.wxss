/* pages/discover/discover.wxss */
@import "/plus/colorui/main.wxss";
@import "/plus/colorui/icon.wxss";

.more_con{
  margin: 20rpx 15rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.more_head{
  background-color: white;
  font-size: 34rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  height: 70rpx;
  padding: 26rpx 0 0 35rpx;
  letter-spacing: 4rpx;
  font-weight: 700;
}

.apps_out {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.apps_container {
  margin-top: 2.1rpx;
  background-color: white;
  width: 238.6rpx;
  height: 238.6rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.apps_icon {
  width: 75rpx;
  height: 75rpx;
}

apps_icon2 {
  width: 60rpx;
  height: 60rpx;
}

.apps_name {
  margin-top: 25rpx;
  font-size: 30rpx;
}



/*动态*/
.news_container {
  margin-bottom: 8px;
  padding: 20rpx 30rpx 20rpx 30rpx;
  background-color: white;
}

.news_header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.haha {
  display: flex;
  flex-direction: row;
}

.news_at {
  display: flex;
  flex-direction: column;
  align-self: center;
  margin-left: 30rpx;
}

.news_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.news_author {
  font-size: 34rpx;
  color: #232323;
  font-weight: bold;
}

.news_time {
  margin-top: 4rpx;
  color: grey;
  font-size: 22rpx;
}

.more {
  margin-top: 13rpx;
  height: 70rpx;
  width: 80rpx;
}

.news_excerpt {
  padding: 5px 8px 0px 0px;
  margin-bottom: 5px;
  font-size: 28rpx;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.excerpt_state {
  margin-left: 15rpx;
  color: #577557;
  font-size: 28rpx;
}

.link {
  display: flex;
  flex-direction: row;
  margin-left: 15rpx;
}

.link_image {
  margin-top: 4rpx;
  width: 30rpx;
  height: 30rpx;
}

.link_text {
  margin-left: 3px;
  font-size: 28rpx;
  color: #577557;
}

.images_container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.news_image1 {
  align-content: center;
  align-items: center;
  align-self: center;
  border-radius: 3rpx;
}

.news_image2 {
  margin-top: 10rpx;
  margin-left: 5rpx;
  height: 200rpx;
  width: 225rpx;
  border-radius: 3rpx;
}

.dt-img {
  width: 450rpx;
}

.bottom {
  height: 40px;
  text-align: center;
  line-height: 40px;
  color: grey;
}

.error {
  margin: 20px 60rpx;
}